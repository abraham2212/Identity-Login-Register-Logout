@model LoginVM
@{
    ViewData["Title"] = "Login";
}



<div class="col-md-4 col-md-offset-4" id="login">
	<section id="inner-wrapper" class="login">
		<h2>Login</h2>
		<div class="text-danger" asp-validation-summary="All"></div>
		<article>
			<form method="post" asp-action="Login">
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user"> </i></span>
						<input class="form-control" asp-for="UsernameOrEmail" placeholder="Username or Email">
						<span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope"> </i></span>
						<input class="form-control" asp-for="Password" placeholder="Password">
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>
				</div>
				<div class="form-group">
					<input type="checkbox" asp-for="IsRememberMe"><label for="rememberMe">Remember me</label>
				</div>
				<button type="submit" class="btn btn-success btn-block">Login</button>
			</form>
		</article>
	</section>
</div>

